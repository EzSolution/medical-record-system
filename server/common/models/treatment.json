{
  "name": "Treatment",
  "plural": "Treatments",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "Timestamp": {}
  },
  "properties": {
    "treatmentId": {
      "type": "string",
      "id": true,
      "required": true,
      "defaultFn": "uuidv4",
      "mongodb": {
        "columnName": "_id"
      }
    },
    "complaint": {
      "type": "string",
      "required": true
    },
    "toothNumber": {
      "type": "number"
    },
    "amount": {
      "type": "number"
    },
    "balance": {
      "type": "number"
    },
    "remarks": {
      "type": "string"
    },
    "active": {
      "type": "boolean",
      "default": true
    }
  },
  "validations": [],
  "relations": {
    "procedures": {
      "type": "hasMany",
      "model": "Procedure",
      "foreignKey": "treatmentId"
    }
  },
  "acls": [],
  "methods": {}
}
